<%-  include("partials/header.ejs") %>
<body>
    <%-  include("partials/navbar.ejs") %>

    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="post" action="/responder">
            <textarea placeholder="Digite sua resposta" class="form-control" name="corpo" required></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <hr>
            <button type="submit" class="btn btn-success">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => {%>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
         <% }) %>
    </div>

</body>
<%-  include("partials/footer.ejs") %>